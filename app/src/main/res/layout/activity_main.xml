<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:background="#d1baf1"
    tools:context="com.example.opilane.quiz2.MainActivity">
<Button
    android:id="@+id/choice1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="107dp"
    android:background="#ff0000"
    android:onClick="onClick"
    android:text="@string/d" />

<Button
    android:id="@+id/choice2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/choice1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="14dp"
    android:background="#fff000"
    android:onClick="onClick"
    android:text="@string/c" />

<Button
    android:id="@+id/choice3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/choice2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="20dp"
    android:background="#00ff00"
    android:onClick="onClick"
    android:text="@string/b" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choice3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:background="#800080"
        android:onClick="onClick"
        android:text="@string/a" />
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/choice1"
        android:layout_marginTop="48dp"
        android:text="@string/score"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/choice4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>















